<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="@android:color/white"
    tools:context=".onboarding.ThirdOnboardingFragment">

    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="45dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="40dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/logo_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/how_often"
            android:contentDescription="Logo" />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="87dp"
        android:layout_marginBottom="23dp"
        android:text="Exercise Frequency"
        android:fontFamily="@font/poppins_medium"
        android:textSize="18sp"
        android:textColor="@color/gray_black"/>

    <Button
        android:id="@+id/btn_freq_1_3"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        style="@style/FrequencyButton"
        android:textColor="@color/gray_black"
        android:fontFamily="@font/poppins_medium"
        android:text="1 - 3 Days" />

    <Button
        android:id="@+id/btn_freq_3_5"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        style="@style/FrequencyButton"
        android:textColor="@color/gray_black"
        android:fontFamily="@font/poppins_medium"
        android:text="3 - 5 Days" />

    <Button
        android:id="@+id/btn_freq_5_7"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        style="@style/FrequencyButton"
        android:textColor="@color/gray_black"
        android:fontFamily="@font/poppins_medium"
        android:text="5 - 7 Days" />

</LinearLayout>
