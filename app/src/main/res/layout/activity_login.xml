<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.activity.authenpage.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="96dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="218dp"
            android:layout_height="38dp"
            android:src="@drawable/logo_bar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="85dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/login"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/username_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="38dp"
            android:layout_marginTop="33dp"
            android:autofillHints="username"
            android:background="@drawable/rounded_corner"
            android:fontFamily="@font/poppins_regular"
            android:hint="@string/user_name"
            android:inputType="text"
            android:paddingStart="29dp"
            android:paddingEnd="29dp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/password_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="38dp"
            android:layout_marginTop="17dp"
            android:autofillHints="password"
            android:background="@drawable/rounded_corner"
            android:fontFamily="@font/poppins_regular"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:paddingStart="29dp"
            android:paddingEnd="29dp"
            android:textColor="@color/black" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:columnCount="2"
            android:orientation="horizontal">
            <TextView
                android:layout_column="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/register_first"
                android:textSize="13sp"
                android:textColor="@color/gray_black"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/register_btn"
                android:layout_width="65dp"
                android:layout_height="25dp"
                android:background="@null"
                android:fontFamily="@font/poppins_bold"
                android:padding="@null"
                android:stateListAnimator="@null"
                android:text="@string/register_second"
                android:textAllCaps="false"
                android:textColor="@color/gray_black"
                android:textSize="13sp" />
        </GridLayout>


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="38dp"
            android:layout_marginTop="43dp"
            android:columnCount="2"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginTop="5dp"
                android:button="@drawable/checkbox"
                android:buttonTint="@null"
                android:checked="false" />

            <TextView
                android:id="@+id/policy_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:autoLink="web"
                android:fontFamily="@font/poppins_regular"
                android:linksClickable="true"
                android:text="@string/policy_checkbox"
                android:textColor="@color/gray_black"
                android:textColorLink="@color/primaryColor"
                android:textSize="11sp" />
        </GridLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login_btn"
            android:layout_width="184dp"
            android:layout_height="46dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_blue"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center_vertical|center"
            android:stateListAnimator="@null"
            android:text="@string/get_start"
            android:textAllCaps="false"
            android:textColor="@drawable/button_text" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>