<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".onboarding.SecondOnboardingFragment">

    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="142dp" android:layout_marginStart="55dp"
        android:layout_marginEnd="40dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/logo_icon"
            android:layout_width="320dp"
            android:layout_height="66dp"
            android:src="@drawable/can_you_rate_your_pain"
            android:contentDescription="Logo" />


    </LinearLayout>

    <ImageView
        android:id="@+id/pain_face_icon"
        android:layout_width="259dp"
        android:layout_height="259dp"
        android:layout_marginTop="81dp"
        android:src="@drawable/ic_pain_sad"
        android:contentDescription="Pain Level Face"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_min_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="14sp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/pain_level_slider" />

    <TextView
        android:id="@+id/tv_max_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textSize="14sp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/pain_level_slider" />

    <SeekBar
        android:id="@+id/pain_level_slider"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="10"
        android:progress="0"
        android:thumbTint="@android:color/white"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"

        android:progressDrawable="@drawable/painlevel_track"
        android:layout_marginTop="145dp"
        app:layout_constraintTop_toBottomOf="@id/pain_face_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_pain_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:textAlignment="center"
        android:text="Focus of attention, prevents doing daily activities"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/pain_level_slider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>