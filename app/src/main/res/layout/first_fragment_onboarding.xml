<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:scrollbars="none"
    tools:context=".onboarding.FirstOnboardingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- HEADER IMAGE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="45dp"
            android:layout_marginHorizontal="45dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/where_do_you_feel_pain"
                android:contentDescription="Logo" />
        </LinearLayout>

        <!-- MY PAIN POINT TITLE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="95dp"
            android:layout_marginHorizontal="19dp"
            android:text="My Pain Point"
            android:textColor="@color/gray_black"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_medium"/>

        <!-- SELECTED PAIN AREA -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tv_my_pain_point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="39dp"
                android:text="None"
                android:textColor="@color/gray_black"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_horizontal"
                android:visibility="visible" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_selected_pain_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="39dp"
                android:visibility="gone"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
        </FrameLayout>

        <!-- PAIN AREA TITLE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="19dp"
            android:text="Pain Area"
            android:textSize="18sp"
            android:textColor="@color/gray_black"
            android:fontFamily="@font/poppins_medium" />

        <!-- PAIN AREA RECYCLER -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_pain_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="39dp"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="5"
            android:textColor="@color/gray_black"
            tools:listitem="@layout/list_item_pain_area" />

    </LinearLayout>

</ScrollView>
